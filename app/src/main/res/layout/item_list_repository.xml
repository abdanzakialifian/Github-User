<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_repository_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/light_blue"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Github-User" />

    <TextView
        android:id="@+id/tv_status_repository"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_status_repository"
        android:fontFamily="@font/poppins_regular"
        android:paddingHorizontal="7dp"
        android:textColor="@color/grey_loading"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@id/tv_repository_name"
        app:layout_constraintTop_toTopOf="@id/tv_repository_name"
        tools:text="Public" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_circle"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@color/purple_200"
        app:layout_constraintStart_toStartOf="@id/tv_repository_name"
        app:layout_constraintTop_toBottomOf="@id/tv_repository_name" />

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/img_circle"
        app:layout_constraintStart_toEndOf="@id/img_circle"
        app:layout_constraintTop_toTopOf="@id/img_circle"
        tools:text="Kotlin" />

</androidx.constraintlayout.widget.ConstraintLayout>